# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Pages
GET     /                           controllers.PagesController.index
GET     /comments/:repoId           controllers.PagesController.comments(repoId: String)

#Api

GET     /api/users                  controllers.UserController.get
POST    /api/users                  controllers.UserController.create

GET     /api/repositories           controllers.GitRepositoryController.search(search)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)

# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Pages
GET     /                           controllers.PagesController.index
GET     /comments/:repoId           controllers.PagesController.comments(repoId: String)

# Api

# Users
POST    /api/users/actions/login    controllers.UserController.login

# Github repositories
GET     /api/repositories           controllers.GitRepositoryController.search(search)
GET     /api/repositories/:repoId   controllers.GitRepositoryController.get(repoId: models.GitHubRepositoryId)

# Github repository comments
GET     /api/repositories/:repoId/comments controllers.CommentController.get(repoId: models.GitHubRepositoryId)
POST    /api/repositories/:repoId/comments controllers.CommentController.create(repoId: models.GitHubRepositoryId)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
